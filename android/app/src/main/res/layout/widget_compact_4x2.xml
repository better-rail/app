<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container_compact_4x2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Station Background Image -->
    <ImageView
        android:id="@+id/widget_station_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/assets_railwaystation" />


    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#BF000000"
        android:padding="12dp">

        <!-- Left Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <!-- Top Left - Station Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <!-- Station Name -->
                <TextView
                    android:id="@+id/widget_station_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Departure"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:shadowColor="#FF000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <!-- Destination with Arrow -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_circle"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Arrow to destination" />

                    <TextView
                        android:id="@+id/widget_destination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/arrival"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="#FF000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                </LinearLayout>

            </LinearLayout>

            <!-- Middle Left - Next Train Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingBottom="8dp">

                <!-- Next Train Label -->
                <TextView
                    android:id="@+id/widget_train_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEXT TRAIN"
                    android:textColor="#FFFF9999"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#FF000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:layout_marginBottom="2dp" />

                <!-- Train Times Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <!-- Departure Time -->
                    <TextView
                        android:id="@+id/widget_next_train_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="#FF000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="6"
                        android:layout_marginEnd="12dp" />

                    <!-- Arrival Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arrival_caps"
                            android:textColor="#FF727378"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:shadowColor="#FF000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                        <TextView
                            android:id="@+id/widget_arrival_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textColor="#FF727378"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:shadowColor="#FF000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Left - Platform Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/widget_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Platform"
                    android:textColor="#FFB6B9BA"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#FF000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3" />

                <TextView
                    android:id="@+id/widget_dot_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="â€§"
                    android:textColor="#FFB6B9BA"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#FF000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3" />

                <TextView
                    android:id="@+id/widget_train_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Train"
                    android:textColor="#FFB6B9BA"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#FF000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3" />

            </LinearLayout>

        </LinearLayout>

        <!-- Separator Line -->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#33FFFFFF" />

        <!-- Right Section - Upcoming Trains -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Upcoming Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upcoming"
                android:textColor="#FF878892"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:shadowColor="#FF000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layout_marginBottom="8dp" />

            <!-- Upcoming Trains List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Train 1 -->
                <LinearLayout
                    android:id="@+id/widget_upcoming_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/widget_upcoming_train_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="13:26"
                        android:textColor="#FFCCCCCC"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:id="@+id/widget_upcoming_arrival_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="13:52"
                        android:textColor="#FF727378"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                </LinearLayout>

                <!-- Train 2 -->
                <LinearLayout
                    android:id="@+id/widget_upcoming_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/widget_upcoming_train_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="13:56"
                        android:textColor="#FFCCCCCC"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:id="@+id/widget_upcoming_arrival_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="14:22"
                        android:textColor="#FF727378"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                </LinearLayout>

                <!-- Train 3 -->
                <LinearLayout
                    android:id="@+id/widget_upcoming_row_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/widget_upcoming_train_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="14:26"
                        android:textColor="#FFCCCCCC"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:id="@+id/widget_upcoming_arrival_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="14:52"
                        android:textColor="#FF727378"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                </LinearLayout>

                <!-- Train 4 -->
                <LinearLayout
                    android:id="@+id/widget_upcoming_row_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/widget_upcoming_train_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="14:34"
                        android:textColor="#FFCCCCCC"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:id="@+id/widget_upcoming_arrival_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15:01"
                        android:textColor="#FF727378"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                </LinearLayout>

                <!-- Train 5 -->
                <LinearLayout
                    android:id="@+id/widget_upcoming_row_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/widget_upcoming_train_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="14:56"
                        android:textColor="#FFCCCCCC"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:id="@+id/widget_upcoming_arrival_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15:22"
                        android:textColor="#FF727378"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:shadowColor="#FF000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>