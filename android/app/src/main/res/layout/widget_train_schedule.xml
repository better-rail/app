<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train Schedule"
                android:textColor="@color/widget_text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/widget_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next departures"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/widget_updated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated 12:34"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/widget_loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminateTint="@color/widget_accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Error State -->
    <LinearLayout
        android:id="@+id/widget_error"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚠️"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to retry"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Schedule Content -->
    <FrameLayout
        android:id="@+id/widget_schedule_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <!-- Train List as LinearLayout for CardViews -->
        <LinearLayout
            android:id="@+id/widget_train_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingHorizontal="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="0dp">
            
            <!-- Train Item 1 -->
            <include
                android:id="@+id/widget_train_item_1"
                layout="@layout/widget_train_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
                
            <!-- Train Item 2 -->
            <include
                android:id="@+id/widget_train_item_2"
                layout="@layout/widget_train_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
                
            <!-- Train Item 3 -->
            <include
                android:id="@+id/widget_train_item_3"
                layout="@layout/widget_train_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
                
            <!-- Train Item 4 -->
            <include
                android:id="@+id/widget_train_item_4"
                layout="@layout/widget_train_item_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
                
            <!-- Train Item 5 -->
            <include
                android:id="@+id/widget_train_item_5"
                layout="@layout/widget_train_item_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
                
        </LinearLayout>

        <!-- No trains message -->
        <TextView
            android:id="@+id/widget_no_trains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No trains found"
            android:textColor="@color/widget_text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

    </FrameLayout>


</LinearLayout>