<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_minimal_background">

    <!-- Minimal Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next Trains"
            android:textColor="@color/widget_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_updated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34"
            android:textColor="@color/widget_text_tertiary"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_refresh_minimal"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh"
            android:scaleType="centerInside" />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ako → Ahihud"
        android:textColor="@color/widget_text_secondary"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="12dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/widget_loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:indeterminateTint="@color/widget_accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading trains..."
            android:textColor="@color/widget_text_secondary"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Error State -->
    <LinearLayout
        android:id="@+id/widget_error"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/widget_error_icon_background"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection failed\nTap to retry"
            android:textColor="@color/widget_text_secondary"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

