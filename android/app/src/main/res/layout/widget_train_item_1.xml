<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/widget_minimal_train_card"
    android:layout_marginBottom="6dp"
    android:gravity="center_vertical">

    <!-- Time -->
    <TextView
        android:id="@+id/train_departure_time_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:36"
        android:textColor="@color/widget_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:minWidth="50dp" />

    <!-- Separator dot -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â€¢"
        android:textColor="@color/widget_text_tertiary"
        android:textSize="12sp"
        android:layout_marginHorizontal="8dp" />

    <!-- Platform -->
    <TextView
        android:id="@+id/train_platform_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plat. 2"
        android:textColor="@color/widget_text_secondary"
        android:textSize="13sp"
        android:fontFamily="sans-serif" />

    <!-- Spacer -->
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <!-- Arrival time -->
    <TextView
        android:id="@+id/train_arrival_time_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:29"
        android:textColor="@color/widget_text_secondary"
        android:textSize="13sp"
        android:fontFamily="sans-serif" />

    <!-- Delay indicator -->
    <TextView
        android:id="@+id/train_delay_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2m"
        android:textColor="@color/widget_delay_text"
        android:textSize="11sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:background="@drawable/widget_minimal_delay_badge"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:layout_marginStart="8dp"
        android:visibility="gone" />

</LinearLayout>