<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/widget_primary_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/train_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:36 - 13:29"
            android:textColor="@color/widget_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/train_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform 2"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/train_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2m delay"
            android:textColor="@color/widget_delay_text"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>