<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/widget_background"
                android:endColor="@color/widget_background_end" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="@color/widget_border" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Subtle inner glow -->
    <item android:insetTop="0.5dp" android:insetLeft="0.5dp" 
          android:insetRight="0.5dp" android:insetBottom="0.5dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="@color/widget_inner_glow" />
            <corners android:radius="19.5dp" />
        </shape>
    </item>
</layer-list>